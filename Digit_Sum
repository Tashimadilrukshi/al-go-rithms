import java.util.Scanner ;

class DigitSum
{

  static int x , sum =0 ;
  
  //To find the digit sum of a number.
  public static int digitSum( int n )
  {
     while( n>0 )
     {
      sum += n%10 ;
      n = n/10 ;
     }
     return sum ;
  }
  
  public static void main( String args[] )
  {
    Scanner scan = new Scanner( System.in ) ;
    int x = scan.nextInt() ;
    
    System. out.println( digitSum( x ) ) ;
  }

}
